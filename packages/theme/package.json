{
  "name": "@functions-oneui/theme",
  "version": "0.0.0",
  "description": "Fluent UI v9 theme composition for OneUI.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "node ../../scripts/run-if-available.mjs tsc -p tsconfig.json",
    "lint": "node ../../scripts/run-if-available.mjs eslint . --max-warnings=0 --no-error-on-unmatched-pattern",
    "typecheck": "node ../../scripts/run-if-available.mjs tsc -p tsconfig.json --noEmit",
    "test": "pnpm run build && node --test tests/theme.test.mjs"
  },
  "devDependencies": {
    "@fluentui/react-components": "^9.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@functions-oneui/tokens": "workspace:*"
  },
  "peerDependencies": {
    "@fluentui/react-components": "^9.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "@fluentui/react-components": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  }
}
