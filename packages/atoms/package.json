{
  "name": "@functions-oneui/atoms",
  "version": "0.0.0",
  "description": "Atomic building blocks for the OneUI component library.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "node ../../scripts/run-if-available.mjs tsc -p tsconfig.json",
    "lint": "node ../../scripts/run-if-available.mjs eslint . --max-warnings=0 --no-error-on-unmatched-pattern",
    "typecheck": "node ../../scripts/run-if-available.mjs tsc -p tsconfig.json --noEmit",
    "test": "pnpm --filter @functions-oneui/testing run build && node ../../scripts/run-if-available.mjs vitest run --config vitest.config.ts",
    "test:ui": "pnpm --filter @functions-oneui/testing run build && node ../../scripts/run-if-available.mjs vitest --config vitest.config.ts --ui"
  },
  "dependencies": {
    "@functions-oneui/react-utils": "workspace:*",
    "@functions-oneui/theme": "workspace:*",
    "@functions-oneui/tokens": "workspace:*"
  },
  "peerDependencies": {
    "@fluentui/react-components": "^9.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@fluentui/react-components": "^9.0.0",
    "@functions-oneui/testing": "workspace:*",
    "@testing-library/react": "^16.1.0",
    "jsdom": "^25.0.1",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "vitest": "^2.1.9"
  }
}
