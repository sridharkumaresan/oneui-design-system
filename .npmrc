# pnpm configuration for Windows compatibility
auto-install-peers=false
strict-peer-dependencies=false

# Symlink settings - disable for Windows compatibility
symlink=false

# Store settings
store-dir=.pnpm-store
modules-dir=node_modules

# Lock file
use-lockfile=true

# Windows path settings
shamefully-hoist=false

# Performance
prefer-offline=true

# Install settings
save-prefix=~

# Network timeouts (increase for slow connections)
fetch-timeout=60000
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# Engine checks
engine-strict=false
